#include"stdio.h"
#include"string.h"
#include"math.h"
main()
{
	float add(float,float),sub(float,float),aver(float,float),a,b;
	printf("输入两个数：");
	scanf("%f %f",&a,&b);
	printf("add=%f,sub=%f,aver=%.2f\n",add(a,b),sub(a,b),aver(a,b));

}
float add(float x,float y){return(x+y);}
float sub(float x,float y){return(x-y);}
float aver(float x,float y){return(add(x,y)/2);}
