  #include"stdio.h"
  main(){
  int a,b;
	char c;
	printf("输入：");
	scanf("%d%c%d",&a,&c,&b);
	switch(c)
	{
	case '+':printf("%d+%d=%d\n",a,b,a+b);break;
	case '-':printf("%d-%d=%d\n",a,b,a-b);break;
	case '*':printf("%d*%d=%d\n",a,b,a*b);break;	
	case '/':if(b!=0) {printf("%d/%d=%d\n",a,b,a/b);break;}
		else {printf("错误！");break;}

	default:printf("c错误！");
	}
  }
